@model SongFinder.Models.VMLogin;
@{
    
}


<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Login</title>
    </head>
    <body>
        <form asp-controller="Access" asp-action="Login" method="post">
            <h1>Login</h1>
        <input type="email" id="username" placeholder="Email" asp-for="Email" />
        <input type="password" id="password" placeholder="Password" asp-for="PassWord" />
            
            <label>
                <input type="checkbox" asp-for="KeepLoggedIn" />
                Keep me logged in.
            </label>
        <button id="button" type="submit" class="btn btn-outline-light">Login</button>

        @if(ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }

        </form>
    </body>
</html>